# Database Configuration
# For Local Development: Comment out DB_HOST to use SQLite
# For Production (cPanel): Uncomment and fill in your database credentials

# DB_HOST=localhost
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_NAME=your_database_name
# NODE_ENV=production

# Server Configuration
PORT=5001

# JWT Secret Key
# Generate a secure key using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
